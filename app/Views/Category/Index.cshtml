@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
        <br />
        <br />
    </div>
</div>

<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
       <tr>
           <th>
               Category Id
           </th>
           <th>
               Category Name
           </th>
           <th>
               Actions
           </th>
       </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.category_id
                </td>
                 <td width="50%">
                    @obj.category_name
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Details" asp-route-id="@obj.category_id" class="btn btn-secodnary mx-2">
                            <i class="bi bi-eye-fill"></i>Details
                        </a>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.category_id" class="btn btn-secodnary mx-2">
                            <i class="bi bi-pen-fill"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.category_id" class="btn btn-secodnary mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>

